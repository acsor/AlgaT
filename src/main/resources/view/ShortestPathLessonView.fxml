<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import unibo.algat.view.GraphGridLayout?>
<?import unibo.algat.view.GraphView?>
<?import unibo.algat.view.LessonView?>
<fx:root
	type="unibo.algat.view.LessonView" xmlns="http://javafx.com/javafx"
	xmlns:fx="http://javafx.com/fxml"
>
	<center>
		<ScrollPane fx:id="mScrollPane" fitToHeight="true" fitToWidth="true">
            <GraphView
					fx:id="mGraphView" nodeRadius="25" nodeMargin="15"
					nodeFill="#3E86A0"
			>
                <padding><Insets topRightBottomLeft="10" /></padding>
				<graphLayout>
					<GraphGridLayout columns="4" />
				</graphLayout>
			</GraphView>
		</ScrollPane>
	</center>
</fx:root>
