<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>
<fx:root type="javafx.scene.layout.HBox" xmlns:fx="http://javafx.com/fxml"
>
	<fx:define>
		<ImageView fx:id="mPlayImage" fitWidth="16" preserveRatio="true">
			<Image url="@/static/play.png" />
		</ImageView>
	</fx:define>
	<fx:define>
		<ImageView fx:id="mPauseImage" fitWidth="16" preserveRatio="true">
			<Image url="@/static/pause.png" />
		</ImageView>
	</fx:define>

	<Button fx:id="mStop">
		<graphic>
			<ImageView fitWidth="16" preserveRatio="true">
				<Image url="@/static/stop.png" />
			</ImageView>
		</graphic>
	</Button>

    <Separator orientation="VERTICAL" />

	<Button fx:id="mPrev">
		<graphic>
			<ImageView fitWidth="16" preserveRatio="true">
				<Image url="@/static/previous.png" />
			</ImageView>
		</graphic>
	</Button>

	<Button fx:id="mTogglePlay">
		<graphic><fx:reference source="mPlayImage" /></graphic>
	</Button>

	<Button fx:id="mNext">
		<graphic>
			<ImageView fitWidth="16" preserveRatio="true">
				<Image url="@/static/next.png" />
			</ImageView>
		</graphic>
	</Button>
</fx:root>

