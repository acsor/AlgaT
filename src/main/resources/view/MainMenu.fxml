<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<MenuBar
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="unibo.algat.control.MainMenuController"
        >
    <Menu text="%gui.menu.file">
        <MenuItem text="%gui.menu.file.exit" onAction="#onExit"
                  accelerator="Ctrl+Q" />
    </Menu>
    <Menu text="%gui.menu.view">
        <MenuItem fx:id="mCloseTab" text="%gui.menu.view.closeTab"
                  accelerator="Ctrl+W" />
    </Menu>
    <Menu text="%gui.menu.edit">
        <MenuItem text="%gui.menu.edit.pref" accelerator="Ctrl+P"
                  disable="true" />
    </Menu>
    <Menu text="%gui.menu.help">
        <MenuItem text="%gui.menu.help.usage" disable="true" />
        <MenuItem text="%gui.menu.help.credits" onAction="#onShowCredits" />
    </Menu>
</MenuBar>
